
<% layout('layouts/boilerplate.ejs')%>
    <!-- this will be sending a post request here -->


<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method= 'POST'>
            <!-- this creates a margin / spce between the input boxes -->
            <div class ='mb-3'>
                <label class="form-label" for='title'>Title</label>
                <!-- this makes the input section bigger and longer -->
                <input class="form-control" type='text' id="title" name = 'campground[title]'>
            </div>
            
            <!-- this creates a margin / spce between the input boxes -->
            <div class ='mb-3'>
                <label class="form-label" for='location'>Location</label>
                <!-- this makes the input section bigger and longer -->
                <input class="form-control" type='text' id="title" name = 'campground[location]'>
            </div>

            <!-- this creates a margin / spce between the input boxes -->
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]">
                </div>
            </div>

            <!-- this creates a margin / spce between the input boxes -->
            
            <div class ='mb-3'>
                <label class="form-label" for='image'>Image URL</label>
                <!-- this makes the input section bigger and longer -->
                <input class="form-control" type='text' id="image" name = 'campground[image]'>
            </div>

            <!-- this creates a margin / spce between the input boxes -->
            <div class ='mb-3'>
                <label class="form-label" for='description'>description </label>
                <!-- this makes the input section bigger and longer -->
                <!-- we are using a text area to now allow us to make descriptions on the property -->
                <textarea class="form-control" type='text' id="description" name = 'campground[description]'></textarea>
            </div>

            <div class ='mb-3'>
                <!-- btn success makes the button color green -->
                <button class = 'btn btn-success'>Add Campground</button>
            </div>
        
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>

